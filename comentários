/ Atribuindo objetos a classes

/ nome completo - idade - data de nascimento - estilo de musica - tem carro - tem filhos 

class Pessoa {
  nomeCompleto
  nome
  idade
  data
  estiloMusica
  carros
  filhos
}
var eu = new Pessoa()
eu.nome = 'Deni'
eu.nomeCompleto ='Deni Castro de Oliveira'
eu.idade = 25
eu.data = '04-01-1997'
eu.estiloMusica = 'Dubstep'
eu.carros = false
eu.filhos = false

